{
  "name": "@tpt/apps-allocations",
  "version": "0.0.1",
  "description": "Allocations app from Planning Suite",
  "dependencies": {
    "@aragon/client": "^1.0.0-beta.9",
    "@aragon/os": "^3.1.9",
    "@aragon/ui": "^0.16.0",
    "babel-runtime": "^6.26.0",
    "prop-types": "^15.6.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "styled-components": "^3.4.2"
  },
  "devDependencies": {
    "@aragon/cli": "^4.1.5",
    "ajv": "^6.0.0",
    "babel-eslint": "^8.2.6",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-stage-3": "^6.24.1",
    "eslint": "^5.3.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.11.1",
    "parcel-bundler": "^1.9.7",
    "prettier": "^1.14.2",
    "react-hot-loader": "^4.3.4",
    "solium": "^1.1.8",
    "truffle": "4.0.5",
    "truffle-hdwallet-provider": "^0.0.6"
  },
  "scripts": {
    "build:app": "parcel build app/index.html -d dist/ --public-url '.'",
    "build:script": "parcel build app/script.js -d dist/",
    "build": "npm run compile && npm run sync-assets && npm run build:app && npm run build:script",
    "compile": "truffle compile",
    "console": "truffle dev",
    "coverage": "SOLIDITY_COVERAGE=true npm run ganache-cli:test",
    "dev": "npm run sync-assets && parcel app/index.html --port 2222",
    "devchain": "aragon devchain",
    "ganache-cli:test": "../shared/test-helpers/ganache-cli.sh",
    "link:aragon": "mkdir -p node_modules/@aragon/os && ln -s $(pwd)/../../node_modules/@aragon/os/contracts node_modules/@aragon/os/contracts 2> /dev/null",
    "link:shared": "mkdir -p node_modules/@tpt && ln -s $(pwd)/../shared/test-helpers node_modules/@tpt/test-helpers 2> /dev/null",
    "lint": "solium --dir ./contracts",
    "prepublishOnly": "truffle compile --all",
    "publish": "apm publish",
    "publish:http": "npx apm publish --http localhost:2222 --served-at ./dist",
    "start": "aragon run",
    "sync-assets": "copy-aragon-ui-assets ./dist",
    "test:gas": "GAS_REPORTER=true npm test",
    "test": "TRUFFLE_TEST=true npm run ganache-cli:test"
  },
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/Giveth/planning-app"
  },
  "license": "GPL-3.0"
}
