{
  "extends": "solium:all",
  "plugins": ["security"],
  "rules": {
    "array-declarations": "error",
    "blank-lines": "off",
    "camelcase": "error",
    "deprecated-suicide": "error",
    "imports-on-top": "error",
    "indentation": "error",
    "lbrace": "off",
    "mixedcase": "off",
    "no-empty-blocks": "error",
    "no-unused-vars": "error",
    "operator-whitespace": "error",
    "pragma-on-top": "error",
    "uppercase": "error",
    "variable-declarations": "error",
    "whitespace": "error"
  }
}
